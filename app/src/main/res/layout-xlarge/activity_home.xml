<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/gambar"
    tools:context="com.digitalcreative.pengaduan.HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp">
        <ImageView
            android:id="@+id/logo"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:src="@drawable/logopln2"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="-40dp"
            android:elevation="2dp" />
        <TextView
            android:textSize="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporan Pengaduan PLN"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="140dp"
            android:paddingRight="140dp">
            <Button
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/btn_go_to"
                android:text="Lapor"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="25dp"
                android:textColor="@android:color/white"
                android:background="@drawable/shape"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Â© Copyright 2017 Digital Creative"
        android:textAllCaps="true"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textSize="20dp"/>
</FrameLayout>
